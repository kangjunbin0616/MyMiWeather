<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.kangjunbin.mymiweatherdemo.MainActivity">
    <include android:id="@+id/title_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/weather_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/index_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/index_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >

            <TextView
                android:id="@+id/index_temperate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="0dp"
                android:textSize="65sp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="@color/frontWhite"
                />
            <TextView
                android:id="@+id/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/index_temperate"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginHorizontal="15dp"
                android:text="多云"
                android:textSize="16sp"
                 />

            <include
                android:id="@+id/forecast_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sun_rise"
                app:layout_constraintTop_toBottomOf="@+id/cloud"
                android:layout_marginTop="250dp"
                layout="@layout/body_layout"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/sun_rise"
                android:background="@drawable/table_shape"
                app:layout_constraintTop_toBottomOf="@+id/forecast_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <!--<ImageView-->
                    <!--android:id="@+id/sun_image"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="60dp"-->
                    <!--app:layout_constraintTop_toTopOf="parent"-->
                    <!--app:layout_constraintLeft_toRightOf="@+id/rise_time"-->
                    <!--app:layout_constraintRight_toLeftOf="@+id/down_time"-->
                    <!--android:src="@drawable/sun"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--/>-->
                <!--<TextView-->
                    <!--android:id="@+id/rise_time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:layout_constraintLeft_toLeftOf="parent"-->
                    <!--app:layout_constraintRight_toLeftOf="@+id/sun_image"-->
                    <!--app:layout_constraintTop_toTopOf="parent"-->
                    <!--app:layout_constraintBottom_toBottomOf="@+id/sun_image"-->
                    <!--android:textSize="10sp"-->
                    <!--app:layout_constraintHorizontal_chainStyle="spread"-->
                    <!--/>-->
                <!--<TextView-->
                    <!--android:id="@+id/down_time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:layout_constraintTop_toTopOf="parent"-->
                    <!--app:layout_constraintBottom_toBottomOf="@+id/sun_image"-->
                    <!--app:layout_constraintLeft_toRightOf="@+id/sun_image"-->
                    <!--app:layout_constraintRight_toRightOf="parent"-->
                    <!--android:textSize="10sp"-->
                    <!--/>-->
                <com.example.kangjunbin.mymiweatherdemo.SunView
                    android:id="@+id/sun_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    sun:svSunRadius="9dp"
                    sun:svTrackWidth="1dp"
                    sun:svTextSize="10sp"
                    sun:svTextOffset="20dp"
                    sun:svPadding="10dp"
                    />
                <TextView
                    android:id="@+id/wind_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/sun_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/wet_percent"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    />
                <TextView
                    android:id="@+id/wet_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/sun_image"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toRightOf="@+id/wind_level"
                    app:layout_constraintRight_toLeftOf="@+id/body_temperate"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/body_temperate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/sun_image"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toRightOf="@id/wet_percent"
                    app:layout_constraintRight_toLeftOf="@+id/air_press"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/sun_image"
                    app:layout_constraintLeft_toRightOf="@+id/body_temperate"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/air_press"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    />
                <TextView
                    android:id="@+id/wind_level_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/wind_level"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/wet_percent"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/wet_percent"
                    app:layout_constraintLeft_toRightOf="@+id/wind_level_direct"
                    app:layout_constraintRight_toLeftOf="@+id/body_temperate_dis"
                    app:layout_constraintStart_toStartOf="@+id/wet_percent"
                    app:layout_constraintEnd_toEndOf="@+id/wet_percent"
                    android:id="@+id/wet_percent_dis"
                    android:textSize="16sp"
                    android:text="湿度"
                    />
                <TextView
                    android:id="@+id/body_temperate_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/body_temperate"
                    app:layout_constraintLeft_toRightOf="@id/wet_percent_dis"
                    app:layout_constraintRight_toLeftOf="@+id/air_press_dis"
                    app:layout_constraintStart_toStartOf="@+id/body_temperate"
                    app:layout_constraintEnd_toEndOf="@+id/body_temperate"
                    android:textSize="16sp"
                    android:text="体感"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/air_press"
                    app:layout_constraintLeft_toRightOf="@+id/body_temperate_dis"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/air_press_dis"
                    app:layout_constraintStart_toStartOf="@+id/air_press"
                    app:layout_constraintEnd_toEndOf="@+id/air_press"
                    android:textSize="16sp"
                    android:text="气压"
                    />
            </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/advice"
            android:background="@drawable/table_shape"
            app:layout_constraintTop_toBottomOf="@+id/sun_rise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/cloth_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/sunshine_image"
                android:src="@drawable/cloth"
                android:layout_marginTop="25dp"
                app:layout_constraintHorizontal_chainStyle="spread"
                />
            <TextView
                android:id="@+id/cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cloth_image"
                app:layout_constraintStart_toStartOf="@id/cloth_image"
                app:layout_constraintEnd_toEndOf="@id/cloth_image"
                />
            <ImageView
                android:id="@+id/sunshine_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintLeft_toRightOf="@id/cloth_image"
                app:layout_constraintRight_toLeftOf="@+id/sport_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:src="@drawable/sunshine"
                />
            <TextView
                android:id="@+id/sunshine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sunshine_image"
                app:layout_constraintStart_toStartOf="@id/sunshine_image"
                app:layout_constraintEnd_toEndOf="@id/sunshine_image"
                />
            <ImageView
                android:id="@+id/sport_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintLeft_toRightOf="@id/sunshine_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:src="@drawable/soccer"
                />
            <TextView
                android:id="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sport_image"
                app:layout_constraintStart_toStartOf="@id/sport_image"
                app:layout_constraintEnd_toEndOf="@id/sport_image"
                />
            <ImageView
                android:id="@+id/wash_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/cloth"
                app:layout_constraintStart_toStartOf="@id/cloth_image"
                app:layout_constraintEnd_toEndOf="@id/cloth_image"
                android:layout_marginTop="25dp"
                android:src="@drawable/carwash"
                />
            <TextView
                android:id="@+id/wash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wash_image"
                app:layout_constraintStart_toStartOf="@id/wash_image"
                app:layout_constraintEnd_toEndOf="@id/wash_image"
                android:layout_marginBottom="25dp"
                />
            <ImageView
                android:id="@+id/umbrella_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/sunshine"
                app:layout_constraintStart_toStartOf="@id/sunshine_image"
                app:layout_constraintEnd_toEndOf="@id/sunshine_image"
                android:layout_marginTop="25dp"
                android:src="@drawable/fish"
                />
            <TextView
                android:id="@+id/umbrella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/umbrella_image"
                app:layout_constraintStart_toStartOf="@+id/umbrella_image"
                app:layout_constraintEnd_toEndOf="@+id/umbrella_image"
                android:layout_marginBottom="25dp"
                />
        </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

     </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
